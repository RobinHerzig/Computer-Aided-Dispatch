<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/images/favicon.png"/>
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/style.css">
    <title>CAD Prototype</title>
</head>
<body>

    <section class="flexContainerColumn">
        <section class="menu">
            <nav>
                <ul class="flexContainerRow">
                    <li>
                        <form action="/newCall" method="POST">
                                <input type="submit" value="New Call" id="newCall">
                        </form>
                    </li>
                    <li>
                        <form action="/viewCall" method="GET">
                            <input type="submit" value="Previous Calls" disabled>
                        </form>
                    </li>
                    <li>
                        <form action="/newPerson" method="GET">
                            <input type="submit" value="Person" disabled>
                        </form>
                    </li>
                    <li>
                        <form action="/newVehicle" method="GET">
                            <input type="submit" value="Vehicle" disabled>
                        </form>
                    </li>
                    <li>
                        <form action="/MDT" method="GET">
                            <input type="submit" value="MDT" disabled>
                        </form>
                    </li>
                </ul>
            </nav>
        </section>
        <section class="flexContainerRow">
            <aside class="calls">
                <ul>
                    <% for (let i = 0; i < info.length; i++) { %>
                        <li class="callList">

                                <button value="<%= info[i]._id %>" class="activeCall">
                                    <span><%= info[i].time %></span>
                                    <span><%= info[i].location %></span>
                                    <span><%= info[i].type %></span> 
                                </button>

                        </li>
                    <% } %>
                </ul>
            </aside>
            <main class="call">
                <!-- <form action="/saveCall" method="PUT"> -->
                    <section class="callInfo">
                        <input type="date" placeholder="Date" name="date" id="date">
                        <input type="time" placeholder="Time" name="time" id="time">
                        <input type="text" placeholder="Location" name="location" id="location">
                        <input type="text" placeholder="Type" name="type" id="type">
                    </section>
                    <section class="callerInfo">
                        <input type="text" placeholder="First Name" name="first" id="first">
                        <input type="text" placeholder="Last Name" name="last" id="last">
                        <input type="text" placeholder="Phone Number" name="phone" id="phone">
                    </section>
                    <section class="callNotes">
                        <input type="text" placeholder="Notes" name="notes">
                    </section>
                    <section class="responseDepartment">
                        <input type="text" placeholder="Apparatus" name="apparatus">
                        <input type="time" placeholder="Tone" name="tone">
                        <input type="time" placeholder="En Route" name="enroute">
                        <input type="time" placeholder="Arrival" name="arrival">
                        <input type="time" placeholder="Departure" name="departure">
                        <input type="time" placeholder="Return" name="return">
                    </section>
                    <section class="responseOther">
                        <input type="text" placeholder="Contact" name="contact">
                        <input type="time" placeholder="Page" name="page">
                        <input type="time" placeholder="Notify" name="notify">
                    </section>
                    <section>
                        <input type="submit">
                    </section>
                <!-- </form> -->
            </main>
        </section>
    </section>

    <!-- <form action="/addRapper" method="POST">
        <input type="text" placeholder="Stage Name" name="stageName">
        <input type="text" placeholder="Birth Name" name="birthName">
        <input type="submit">
    </form> -->
    

    <script src='js/main.js'></script>
</body>
</html>
